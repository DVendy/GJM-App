<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:dividerPadding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e5ebef">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="#ItemCode"
                android:id="@+id/tvItemcode"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="#fff"
                android:textColor="#788ca6"
                android:layout_margin="0.5dp"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ItemDistributor"
                android:id="@+id/tvItemdistributor"
                android:layout_weight="5"
                android:gravity="right"
                android:padding="5dp"
                android:background="#fff"
                android:textColor="#b6bfcd"
                android:layout_margin="0.5dp"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="0.5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ItemName"
                android:id="@+id/tvItemname"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#8092aa"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CUR"
                android:id="@+id/tvItemcurrency"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="#fff"
                android:textColor="#bac3d1"
                android:layout_margin="0.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="x.xxx.xxx"
                android:id="@+id/tvItemprice"
                android:layout_weight="5"
                android:gravity="right"
                android:padding="5dp"
                android:textColor="#55c5f3"
                android:background="#fff"
                android:layout_margin="0.5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>